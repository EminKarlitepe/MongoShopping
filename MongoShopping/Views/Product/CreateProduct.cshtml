@model CreateProductDto

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/AdminLayout/index.cshtml";
}

<h4 class="page-title mb-4">Yeni Ürün Ekle</h4>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body">
                <form asp-action="CreateProduct" method="post">
                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label">Ürün Adı</label>
                        <input asp-for="ProductName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProductPrice" class="form-label">Fiyat</label>
                        <input asp-for="ProductPrice" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Durum</label>
                        <select asp-for="Status" class="form-control">
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StockCount" class="form-label">Stok</label>
                        <input asp-for="StockCount" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Kategori</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                            <option value="">Seçiniz</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Brand" class="form-label">Marka</label>
                        <input asp-for="Brand" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

@model UpdateProductImagesDto

@{
    ViewData["Title"] = "UpdateProductImages";
    Layout = "~/Views/AdminLayout/index.cshtml";
}

<h4 class="page-title mb-4">Ürün Görseli Güncelle</h4>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Görsel Güncelle</h5>
            </div>
            <form method="post" class="needs-validation" novalidate>
                <div class="card-body">

                    <input type="hidden" asp-for="ImageId" />

                    <div class="mb-3">
                        <label for="ProductId" class="form-label">Ürün Seçiniz</label>
                        <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-select" required>
                            <option value="">Seçiniz</option>
                        </select>
                        <div class="invalid-feedback">
                            Lütfen ürün seçiniz.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="ImageUrl" class="form-label">Görsel URL</label>
                        <input type="text" id="ImageUrl" name="ImageUrl" class="form-control" asp-for="ImageUrl" required />
                        <div class="invalid-feedback">
                            Lütfen görsel URL giriniz.
                        </div>
                    </div>

                </div>
                <div class="card-footer d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning px-4">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (() => {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()
</script>

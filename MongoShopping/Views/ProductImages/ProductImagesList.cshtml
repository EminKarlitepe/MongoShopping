@model List<ResultProductImagesDto>

@{
    ViewData["Title"] = "ProductImagesList";
    Layout = "~/Views/AdminLayout/index.cshtml";
    int count = 0;
}

<h4 class="page-title mb-4">Ürün Görselleri</h4>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Ürün Görselleri Listesi</h5>
                <a asp-action="CreateProductImages" class="btn btn-light btn-sm">+ Yeni Görsel Ekle</a>
            </div>
            <div class="card-body">
                <p class="text-muted mb-3">Aşağıda ürün görselleri işlemlerini gerçekleştirebilirsiniz.</p>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light text-uppercase small">
                            <tr>
                                <th scope="col" style="width: 5%;">#</th>
                                <th scope="col">Image Id</th>
                                <th scope="col">Product Id</th>
                                <th scope="col">Görsel</th>
                                <th scope="col" style="width: 10%;">Sil</th>
                                <th scope="col" style="width: 12%;">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.ImageId</td>
                                    <td>@item.ProductId</td>
                                    <td><img src="@item.ImageUrl" style="max-height:50px;" /></td>
                                    <td>
                                        <a asp-action="DeleteProductImages" asp-route-id="@item.ImageId" class="btn btn-outline-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                            <i class="bi bi-trash"></i> Sil
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="UpdateProductImages" asp-route-id="@item.ImageId" class="btn btn-outline-warning btn-sm">
                                            <i class="bi bi-pencil-square"></i> Güncelle
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

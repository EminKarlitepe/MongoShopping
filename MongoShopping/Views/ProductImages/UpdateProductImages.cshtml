@model GetProductImagesByIdDto

@{
    ViewData["Title"] = "UpdateProductImages";
    Layout = "~/Views/AdminLayout/index.cshtml";
}

<h4 class="page-title mb-4">Ürün Görseli Güncelle</h4>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body">
                <form asp-action="UpdateProductImages" method="post">
                    <input type="hidden" asp-for="ImageId" />

                    <div class="mb-3">
                        <label asp-for="ProductId" class="form-label">Ürün</label>
                        <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-control">
                            <option value="">Seçiniz</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
@model List<ResultSliderDto>

@{
    ViewData["Title"] = "SliderList";
    Layout = "~/Views/AdminLayout/index.cshtml";
    int count = 0;
}

<h4 class="page-title mb-4">Slaytlar</h4>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Slayt Listesi</h5>
                <a href="/Slider/CreateSlider" class="btn btn-light btn-sm">+ Yeni Slayt Ekle</a>
            </div>
            <div class="card-body">
                <p class="text-muted mb-3">Aşağıda slayt işlemlerini gerçekleştirebilirsiniz.</p>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light text-uppercase small">
                            <tr>
                                <th scope="col" style="width: 5%;">#</th>
                                <th scope="col">Slayt Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Resim</th>
                                <th scope="col">Anchor ID</th>
                                <th scope="col" style="width: 10%;">Order</th>
                                <th scope="col" style="width: 10%;">Sil</th>
                                <th scope="col" style="width: 12%;">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(x => x.Order))
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.SectionName</td>
                                    <td>@item.Title</td>
                                    <td>
                                        <img src="@item.ImageUrl" alt="Slayt Görsel" width="80" height="50" style="object-fit: cover;" />
                                    </td>
                                    <td>@item.AnchorId</td>
                                    <td>@item.Order</td>
                                    <td>
                                        <a href="/Slider/DeleteSlider/@item.SectionId" class="btn btn-outline-danger btn-sm" onclick="return confirm('Slaytı silmek istediğinize emin misiniz?');">
                                            <i class="bi bi-trash"></i> Sil
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Slider/UpdateSlider/@item.SectionId" class="btn btn-outline-warning btn-sm">
                                            <i class="bi bi-pencil-square"></i> Güncelle
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

@model GetSliderByIdDto

@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/AdminLayout/index.cshtml";
}

<h4 class="page-title mb-4">Slaytlar</h4>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Slayt Güncelle</h5>
            </div>
            <form method="post" class="needs-validation" novalidate>
                <div class="card-body">
                    <input type="hidden" asp-for="SectionId" />

                    <div class="mb-3">
                        <label for="SectionName" class="form-label">Slayt Başlık</label>
                        <input type="text" id="SectionName" name="SectionName" class="form-control" asp-for="SectionName" required />
                        <div class="invalid-feedback">
                            Lütfen slayt başlığı giriniz.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Title" class="form-label">Alt Başlık</label>
                        <input type="text" id="Title" name="Title" class="form-control" asp-for="Title" required />
                    </div>

                    <div class="mb-3">
                        <label for="AnchorId" class="form-label">Anchor ID</label>
                        <input type="text" id="AnchorId" name="AnchorId" class="form-control" asp-for="AnchorId" />
                    </div>

                    <div class="mb-3">
                        <label for="Order" class="form-label">Order</label>
                        <input type="number" id="Order" name="Order" class="form-control" asp-for="Order" required />
                        <div class="invalid-feedback">
                            Lütfen sıralama numarası giriniz.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="ImageUrl" class="form-label">Resim URL</label>
                        <input type="text" id="ImageUrl" name="ImageUrl" class="form-control" asp-for="ImageUrl" required />
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning px-4">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (() => {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>

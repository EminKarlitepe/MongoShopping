@model GetCategoryByIdDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/index.cshtml";
}

<h4 class="page-title mb-4">Kategoriler</h4>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Kategori Güncelle</h5>
            </div>
            <form method="post" class="needs-validation" novalidate>
                <div class="card-body">
                    <input type="hidden" asp-for="CategoryId" />

                    <div class="mb-3">
                        <label for="CategoryName" class="form-label">Kategori Adı</label>
                        <input type="text" id="CategoryName" name="CategoryName" class="form-control" asp-for="CategoryName" required>
                        <div class="invalid-feedback">
                            Lütfen kategori adı giriniz.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="ImageUrl" class="form-label">Resim URL</label>
                        <input type="text" id="ImageUrl" name="ImageUrl" class="form-control" asp-for="ImageUrl">
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning px-4">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (() => {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()
</script>